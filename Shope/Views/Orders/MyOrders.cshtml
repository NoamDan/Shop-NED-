@model IEnumerable<Shope.Models.OrderAndProduct>

@{
    ViewData["Title"] = "MyOrders";
}

<h2>MyOrders</h2>
<p>
    <a asp-action="MyOrders">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem =>item.ProductId)
                </td>
            </tr>
        }
    </tbody>
</table>

